#!name = 知乎去广告
#!desc = 去除开屏广告、首页右下角悬浮框、推荐列表广告、问题回答列表广告、具体回答下的广告。
#!openUrl = 
#!author = app2smile
#!homepage = https://gitlab.com/lodepuly/vpn_tool/-/tree/main/Tool/Loon/Plugin
#!icon = https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png

[Rule]
# 拦截开屏广告
URL-REGEX,^https?:\/\/api\.zhihu\.com\/commercial_api\/launch_v2\?,REJECT
URL-REGEX,^https?:\/\/api\.zhihu\.com\/commercial_api\/real_time_launch_v2\?,REJECT
# 拦截品牌提问广告
URL-REGEX,^https?:\/\/api\.zhihu\.com\/brand\/question\/\d+/card\?,REJECT
URL-REGEX,^https?:\/\/www\.zhihu\.com\/api\/v\d+\/brand\/question/\d+/card\?,REJECT
# 我的页面 - 屏蔽开通盐选会员的卡片
URL-REGEX,^https?:\/\/api\.zhihu\.com\/unlimited\/go\/my_card,REJECT
# 其他拦截不影响使用的域名
DOMAIN,mqtt.zhihu.com,REJECT
DOMAIN,sugar.zhihu.com,REJECT
DOMAIN,crash2.zhihu.com,REJECT
DOMAIN,appcloud.zhihu.com,REJECT
DOMAIN,appcloud2.in.zhihu.com,REJECT

[Rewrite]
# 拦截DNS解析
^https?:\/\/118\.89\.204\.198 - reject-dict
^https?:\/\/2402:4e00:1200:ed00:0:9089:6dac:96b6 - reject-dict
# 屏蔽下发的配置，如皮肤等
^https?:\/\/api\.zhihu\.com\/ab\/api\/v1\/products\/zhihu\/platforms\/ios\/config - reject-dict
# 去除底部标签页关注人角标
^https?:\/\/api\.zhihu\.com\/moments\/tab_v2 - reject-dict
# 去除消息通知角标
^https?:\/\/api\.zhihu\.com\/(notifications\/v\d\/count) - reject-dict
# 拦截回答下的卡片广告
^https?:\/\/www\.zhihu\.com\/api\/v\d\/answers\/\d+\/recommendations - reject-dict
# 拦截应用内弹窗
^https?:\/\/api\.zhihu\.com\/me\/guides - reject-dict
# 去除关注页最常访问
^https?:\/\/api\.zhihu\.com\/moments\/recent - reject-dict  

[Script]
# 获取用户信息 - 隔离用户数据，开启本地盐选会员等
http-response ^https?:\/\/api\.zhihu\.com\/people\/ requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 处理用户信息, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 解锁本地的关键词屏蔽功能，需要开启本地VIP
http-request ^https?:\/\/api\.zhihu\.com\/feed-root\/block script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 解锁关键词屏蔽, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 优化软件配置 - 优化下发的配置文件来实现某些效果
http-response ^https?:\/\/m-cloud\.zhihu\.com\/api\/cloud\/config\/all\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 优化软件配置1, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png

http-response ^https?:\/\/appcloud2\.zhihu\.com\/v\d+\/config requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 优化软件配置2, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 用户信息 - 修改用户盐值
http-response ^https?:\/\/api\.zhihu\.com\/user-credit\/basis requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 修改用户盐值, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 关注页 - 内容优化及屏蔽转发的黑名单用户想法
http-response ^https?:\/\/api\.zhihu\.com\/moments_v3\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 关注列表优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 推荐页 - 移除黑名单用户发布的文章、去除广告，及自定义一些屏蔽项目
http-response ^https:\/\/api\.zhihu\.com\/topstory\/recommend\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 推荐页优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 黑名单页 - 同步黑名单数据
http-response ^https?:\/\/api\.zhihu\.com\/settings\/blocked_users requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 同步黑名单, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 问题的回答列表 - 移除黑名单用户的回答、去除广告
http-response ^https?:\/\/api\.zhihu\.com\/(v4\/)?questions\/\d+ requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 回答列表优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 回答信息流 - 移除黑名单用户的回答、去除广告
^https?:\/\/api\.zhihu\.com\/next-data requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 回答信息流优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 回答页底部评论摘要 - 移除黑名单用户发表的评论
http-response ^https?:\/\/www\.zhihu\.com\/api\/v4\/comment_v5\/answers\/\d+\/abstract_comment\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 评论摘要优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 评论页及子页面 - 去除黑名单用户发表的评论
http-response ^https?:\/\/api\.zhihu\.com\/(comment_v5\/)?(answers|comments?|articles|pins)\/\d+\/(root_|child_)?comments? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 评论优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 消息页 - 折叠官方消息、屏蔽营销消息
http-response ^https?:\/\/api\.zhihu\.com\/notifications\/v3\/(message|timeline\/entry\/system_message) requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 消息优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 回答页 - 内容优化，付费、营销、推广内容文首提醒
http-response ^https?:\/\/www\.zhihu\.com\/appview\/v2\/answer\/.*(entry=(?!(preload-topstory|preload-search|preload-subscription)))? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 回答内容优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 回答页 - 屏蔽下翻出现的黑名单用户的回答
http-response ^https?:\/\/api\.zhihu\.com\/next\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 回答翻页优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 文章页 - 去除底部广告
http-response ^https?:\/\/www\.zhihu\.com\/api\/v\d\/articles\/\d+\/recommendation\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 文章优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 热榜页 - 去除广告
http-response ^https?:\/\/api\.zhihu\.com\/topstory\/hot-lists?(\?|\/) requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 热榜优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


# 搜索页 - 去除预置广告
http-response ^https?:\/\/api\.zhihu\.com\/search\/preset_words\? requires-body=true, script-path = https://gitlab.com/lodepuly/proxy_tool_resources/-/raw/master/script/zheye/zheye.js, tag = 预置关键词优化, img-url=https://gitlab.com/lodepuly/iconlibrary/-/raw/master/App_icon/80px/Zhihu.png


