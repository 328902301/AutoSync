[Script]
MicrosoftAPI = type=http-request,pattern=^https:\/\/graph\.microsoft\.com\/v1\.0\/myorganization\/applications\/[\w-]+\/addPassword,requires-body=1,max-size=-1,script-path=https://hub.qste.com/Script/Others/MicrosoftAPI.js
