[Script]
amap1 = type=http-response,pattern=^https?:\/\/m5\.amap\.com\/ws\/shield\/(search\/new_hotword|dsp\/profile\/index\/nodefaas),requires-body=1,script-path=https://raw.githubusercontent.com/kokoryh/Script/master/js/amap.js
