#!name=Zhihu
#!desc=Zhihu app removes ads.
#!system=ios

[Rule]
URL-REGEX,https://api\.zhihu\.com/commercial_api,REJECT

[Script]
// 首页 -> 关注
http-response ^https://api\.zhihu\.com/moments/recommend requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/yjqiang/surge_scripts/master/scripts/zhihu/zhihu_moments_recommend.js

// 首页 -> 推荐
http-response ^https://api\.zhihu\.com/topstory/recommend requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/yjqiang/surge_scripts/master/scripts/zhihu/zhihu_topstory_recommend.js

// 知乎某问题的页面
http-response ^https://api\.zhihu\.com/v4/questions/\d+/answers requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/yjqiang/surge_scripts/master/scripts/zhihu/zhihu_question_answers.js

// 回答最下方的广告
http-response ^https://www\.zhihu\.com/api/v4/answers/\d+/recommendations requires-body=1,max-size=0,script-path=https://raw.githubusercontent.com/yjqiang/surge_scripts/master/scripts/zhihu/zhihu_answer.js


[MITM]
hostname = %APPEND% api.zhihu.com, www.zhihu.com