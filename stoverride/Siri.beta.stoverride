name:  iRingo for 🔍 Siri & Search
desc: (BETA) 全面自定义「Siri与搜索」的功能。注：该覆写包含代理规则。

rules:
  - DOMAIN,lookup-api.apple.com,Proxy
  - DOMAIN,lookup-api.apple.com.edgekey.net,Proxy
  - DOMAIN,e16991.b.akamaiedge.net,Proxy

http:
  mitm:
    - "api*.smoot.apple.com"
    - "api*.smoot.apple.cn"
  script:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/bag(\?.*)?$
      name: Siri.request
      type: request
      require-body: false
      timeout: 5
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/bag(\?.*)?$
      name: Siri.response
      type: response
      require-body: true
      timeout: 10
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/search(\?.*)?$
      name: Siri.request
      type: request
      require-body: false
      timeout: 5
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/search(\?.*)?$
      name: Siri.response
      type: response
      require-body: true
      timeout: 10
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/warm(\?.*)?$
      name: Siri.request
      type: request
      require-body: false
      timeout: 5
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/render(\?.*)?$
      name: Siri.request
      type: request
      require-body: false
      timeout: 5
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/flight(\?.*)?$
      name: Siri.request
      type: request
      require-body: false
      timeout: 5
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/card(\?.*)?$
      name: Siri.request
      type: request
      require-body: false
      timeout: 5
      argument:
    - match: ^https?:\/\/api(.*)\.smoot\.apple\.(com|cn)\/card(\?.*)?$
      name: Siri.response
      type: request
      require-body: true
      timeout: 10
      argument:

script-providers:
  Siri.request:
    url: https://raw.githubusercontent.com/VirgilClyne/iRingo/beta/js/Siri.request.beta.js
    interval: 86400
  Siri.response:
    url: https://raw.githubusercontent.com/VirgilClyne/iRingo/beta/js/Siri.response.beta.js
    interval: 86400
